{
  "schemaVersion": "1.0.0",
  "name": "healthlab-backend",
  "description": "FastAPI service powering HealthLabâ€™s nutrition intelligence APIs.",
  "image": {
    "build": {
      "dockerfile": "Dockerfile",
      "context": "."
    }
  },
  "runtime": {
    "cmd": [
      "uvicorn",
      "app.main:app",
      "--host",
      "0.0.0.0",
      "--port",
      "${PORT:-8000}"
    ],
    "env": {
      "PORT": "8000"
    },
    "expose": [
      {
        "port": 8000,
        "protocol": "http"
      }
    ],
    "healthcheck": {
      "path": "/api/v1/health",
      "interval": "30s"
    }
  }
}

